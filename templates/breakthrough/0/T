FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -3 0 0 0 0 0];

internalField   uniform 0.0;

boundaryField
{
    "(front|back|right|left)"
    {
        type    empty;
    }

    top
    {
        type               uniformInletOutlet;
        uniformInletValue  constant 1.0;
        phi                phi;
    }

    bottom
    {
        type            zeroGradient;
    }
}

